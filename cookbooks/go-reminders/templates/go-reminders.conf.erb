description "Simple reminders application written in Golang"
author "VMware, Inc."
start on runlevel [345]
stop on runlevel [!345]
respawn
respawn limit 10 5
exec /usr/local/go-reminders/go-reminders -t /usr/local/go-reminders -host <%= @db_host %> -port <%= @db_port %> -user <%= @db_user %> -passwd <%= @db_passwd %> >> /usr/local/go-reminders/go-reminders.log 2>&1
